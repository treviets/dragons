<?xml version='1.0' encoding='utf-8'?>

<!-- The contents of this file will be loaded for each web application -->
<Context>
    <Resource name="jdbc/dragons"
              auth="Container"
              type="javax.sql.DataSource"
              username="root"
              password="root"
              driverClassName="com.mysql.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/dragons?useUnicode=true&amp;characterEncoding=utf-8"
              maxTotal="100"
              maxIdle="10"
              maxWaitMillis="10000"/>

    <Environment name="dragons/springProfilesActive" type="java.lang.String" value="dev"/>  <!-- ACTIVE PROFILE -->
</Context>
